<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.transactionassessment.ui.main.MainFragment"
        android:label="Transaction History"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_navigate_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.transactionassessment.ui.detail.DetailFragment"
        android:label="Transaction Detail"
        tools:layout="@layout/fragment_detail" />

</navigation>